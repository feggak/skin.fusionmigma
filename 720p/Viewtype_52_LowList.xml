					<visible>!Window.IsVisible(24)</visible>
					<control type="image">
						<posy>494</posy>
						<posx>185</posx>
						<width>1</width>
						<height>192</height>
						<aspectratio>stretch</aspectratio>
						<texture>white.png</texture>
						<colordiffuse>0fffffff</colordiffuse>
					</control>
