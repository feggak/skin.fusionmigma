					<control type="label">
						<posy>0</posy>
						<posx>948</posx>
						<width>200</width>
						<height>32</height>
						<textcolor>e7c0c0c0</textcolor>
						<font>movietitle2b</font>
						<align>left</align>
						<scroll>false</scroll>
						<label>$INFO[ListItem.Director]</label>
						<visible>!IsEmpty(ListItem.Director)</visible>
					</control>
					<!-- TOP 250 -->
					<control type="label">
						<posy>0</posy>
						<posx>1168</posx>
						<width>150</width>
						<height>32</height>
						<textcolor>e7c0c0c0</textcolor>
