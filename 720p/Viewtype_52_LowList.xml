					</control>
					<!-- DIRECTOR -->
					<control type="image">
						<posy>0</posy>
						<posx>923</posx>
						<width>18</width>
						<aspectratio>keep</aspectratio>
						<texture>list/directoricon.png</texture>
						<colordiffuse>e7c0c0c0</colordiffuse>
