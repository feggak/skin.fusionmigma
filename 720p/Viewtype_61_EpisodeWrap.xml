<includes>

	<include name="EpisodeWrap">
		<control type="group">
			<include>InfoOpenClose</include>
			<include>ViewWindowOC</include>
			<include>ContextFade</include>
			<include>Keyboard</include>

			<control type="group">
				<visible>Control.IsVisible(61)</visible>
				<posx>0</posx>
				<posy>70</posy>
				<control type="group">
					<control type="wraplist" id="61">
						<visible>!Skin.HasSetting(HideEpisodeWrap)</visible>
						<visible>Container.Content(Episodes)</visible>
						<posx>-200</posx>
						<posy>40</posy>
						<width>1700</width>
						<height>560</height>
						<onleft>61</onleft>
						<onright>61</onright>
						<onup>300</onup>
						<ondown>605</ondown>
						<viewtype label="EpisodeWrap">bigwrap</viewtype>
						<pagecontrol>605</pagecontrol>
						<scrolltime>300</scrolltime>
						<focusposition>1</focusposition>
						<orientation>horizontal</orientation>
						<itemlayout height="430" width="425">
							<control type="label">
								<posx>25</posx>
								<posy>42</posy>
								<width>395</width>
								<height>35</height>
								<font>big2</font>
								<textcolor>95ffffff</textcolor>
								<scroll>false</scroll>
								<align>left</align>
								<label>$INFO[ListItem.Label]</label>
								<visible>!Skin.HasSetting(HideLabelWrapViews)</visible>
							</control>
							<control type="image">
								<posx>-25</posx>
								<posy>54</posy>
								<width>458</width>
								<height>251</height>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>80FFFFFF</colordiffuse>
								<texture background="true">poster/postershadow.png</texture>
							</control>
							<control type="image">
								<posx>2</posx>
								<posy>65</posy>
								<width>406</width>
								<height>229</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<visible>Container.Content(episodes)</visible>
							</control>
							<control type="image">
								<posy>270</posy>
								<posx>368</posx>
								<width>36</width>
								<height>60</height>
								<aspectratio>keep</aspectratio>
								<texture>watchedbadge.png</texture>
								<visible>stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
								<visible>Skin.HasSetting(WatchedOverlays)</visible>
							</control>
						</itemlayout>

						<focusedlayout height="310" width="423">

							<control type="image">
								<posx>11</posx>
								<posy>68</posy>
								<width>384</width>
								<height>224</height>
								<aspectratio>stretch</aspectratio>
								<texture border="12">whitepanel2.png</texture>
								<animation reversible="false" effect="zoom" start="100" end="150" center="auto" time="200">focus</animation>
								<animation type="UnFocus" reversible="false">
									<effect type="fade" start="100" end="0" time="0" delay="0" />
									<effect type="zoom" start="115" end="100" time="0" center="auto" />
								</animation>
							</control>
							<control type="image">
								<posx>-25</posx>
								<posy>54</posy>
								<width>458</width>
								<height>251</height>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>80FFFFFF</colordiffuse>
								<texture background="true">poster/postershadow.png</texture>
							</control>
							<control type="image">
								<posx>0</posx>
								<posy>65</posy>
								<width>406</width>
								<height>229</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<visible>Container.Content(episodes)</visible>
								<animation reversible="false" effect="zoom" start="100" end="135" center="auto" time="200">focus</animation>
								<animation reversible="false" effect="zoom" start="135" end="100" center="auto" time="200">unfocus</animation>
							</control>
							<control type="image">
								<posy>285</posy>
								<posx>426</posx>
								<width>48</width>
								<height>48</height>
								<aspectratio>keep</aspectratio>
								<texture>watchedbadge2.png</texture>
								<visible>stringcompare(ListItem.Overlay,OverlayWatched.png)</visible>
								<visible>Skin.HasSetting(WatchedOverlays)</visible>
								<animation type="Focus" reversible="false">
									<effect type="fade" start="0" end="100" time="100" delay="250" />
									<effect type="zoom" start="75" end="100" time="350" center="auto" tween="back" easing="in" />
								</animation>
								<animation type="UnFocus" reversible="false">
									<effect type="fade" start="100" end="0" time="0" delay="0" />
									<effect type="zoom" start="100" end="75" time="0" center="auto" tween="back" easing="inout"  />
								</animation>
							</control>
						</focusedlayout>
					</control>
				</control>
			</control>

			<control type="scrollbar" id="605">
				<posx>0</posx>
				<posy>649</posy>
				<width>1280</width>
				<height>5</height>
				<visible allowhiddenfocus="true">Control.IsVisible(61) + Control.HasFocus(605)</visible>
				<texturesliderbackground>white2.png</texturesliderbackground>
				<textureslidernibfocus>white3.png</textureslidernibfocus>
				<onup>598</onup>
				<ondown>-</ondown>
				<showonepage>true</showonepage>
				<orientation>horizontal</orientation>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(605)">Conditional</animation>
			</control>

			<control type="group">
				<posy>70</posy>
				<visible>Control.IsVisible(61)</visible>
				<animation effect="slide" start="0,0" end="78,-47" time="250" condition="Control.HasFocus(605) | Control.HasFocus(300)">conditional</animation>
				<control type="grouplist">
					<posx>148</posx>
					<posy>390</posy>
					<width>1280</width>
					<height>40</height>
					<align>left</align>
					<aligny>center</aligny>
					<orientation>horizontal</orientation>
					<control type="label">
						<posx>0</posx>
						<width min="29" max="1050">auto</width>
						<height>38</height>
						<font>movietitle6</font>
						<textcolor>white</textcolor>
						<scroll>false</scroll>
						<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
					</control>
				</control>

				<control type="textbox">
					<posx>148</posx>
					<posy>425</posy>
					<width>750</width>
					<height>97</height>
					<align>justify</align>
					<info>ListItem.Plot</info>
					<font>about</font>
					<textcolor>movietitleb2</textcolor>
					<autoscroll>5</autoscroll>
					<animation type="Focus" reversible="false">
						<effect type="fade" start="0" end="100" time="200" />
					</animation>
				</control>

			</control>
		</control>
	</include>

</includes>