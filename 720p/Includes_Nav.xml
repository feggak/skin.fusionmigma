<includes>

	<!-- ============== -->
	<!-- ============== -->
	<!-- Navigation Bar -->
	<!-- ============== -->
	<!-- ============== -->

	<include name="nav">
		<control type="group">
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>2560</width>
				<height>62</height>
				<aspectratio>stretch</aspectratio>
				<texture>nav/barbg.png</texture>
				<visible>!Skin.HasSetting(BlackNavBar)</visible>
			</control>

			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>62</height>
				<aspectratio>stretch</aspectratio>
				<texture>nav/barbgalt.png</texture>
				<visible>Skin.HasSetting(BlackNavBar)</visible>
			</control>

			<!-- BREADCRUMBS -->
			<control type="grouplist">
				<posx>20</posx>
				<posy>0</posy>
				<width>1000</width>
				<align>left</align>
				<orientation>horizontal</orientation>

				<!-- First Set -->
				<control type="label">
					<description>First Label</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="240">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE]$VAR[Breadcrumbs1][/UPPERCASE]</label>
					<animation type="WindowClose" reversible="false">
						<effect type="fade" start="100" end="0" time="200" delay="0" />
					</animation>
					<animation type="WindowOpen" reversible="false">
						<effect type="fade" start="0" end="100" time="200" delay="0" />
					</animation>
				</control>
				<control type="image">
					<description>White breadcrumb</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="53" max="53">auto</width>
					<height>53</height>
					<aspectratio>keep</aspectratio>
					<texture>nav/breadcrumb.png</texture>
					<visible>!Skin.HasSetting(BlackNavBar)</visible>
					<animation type="WindowClose" reversible="false">
						<effect type="fade" start="100" end="0" time="200"/>
					</animation>
					<animation type="WindowOpen" reversible="false">
						<effect type="fade" start="0" end="100" time="200"/>
					</animation>
				</control>
				<control type="image">
					<description>Black breadcrumb</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="53" max="53">auto</width>
					<height>53</height>
					<aspectratio>keep</aspectratio>
					<texture>nav/breadcrumbalt.png</texture>
					<visible>Skin.HasSetting(BlackNavBar)</visible>
					<animation type="WindowClose" reversible="false">
						<effect type="fade" start="100" end="0" time="200"/>
					</animation>
					<animation type="WindowOpen" reversible="false">
						<effect type="fade" start="0" end="100" time="200"/>
					</animation>
				</control>

				<!-- Second Set -->
				<control type="label">
					<description>FolderName</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="400">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE]$VAR[Breadcrumbs2][/UPPERCASE]</label>
					<scroll>false</scroll>
					<include>BreadCrumb1</include>
				</control>
				<control type="label">
					<description>HD Movies Label</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="200">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE]$LOCALIZE[31016][/UPPERCASE]</label>
					<visible>SubString(Container.FolderPath,_hmplayx.xsp,right)</visible>
					<visible>!Window.IsVisible(12003)</visible>
					<include>BreadCrumb1</include>
				</control>
				<!-- FUSION SETTINGS -->
				<control type="label">
					<description>Fusion Label</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="300">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE]$LOCALIZE[31766][/UPPERCASE]</label>
					<visible>Window.IsVisible(56) | Window.IsVisible(9000) | Window.IsVisible(9001) | Window.IsVisible(9002) | Window.IsVisible(9003)</visible>
					<include>BreadCrumb1</include>
				</control>
				<control type="label">
					<description>Fusion Home Label</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="300">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE] $LOCALIZE[31402][/UPPERCASE]</label>
					<visible>Window.IsVisible(9000)</visible>
					<include>BreadCrumb1</include>
				</control>
				<control type="label">
					<description>Fusion Views Label</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="300">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE]$LOCALIZE[31403][/UPPERCASE]</label>
					<visible>Window.IsVisible(9001)</visible>
					<include>BreadCrumb1</include>
				</control>
				<control type="label">
					<description>Fusion OSD Label</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="300">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE]$LOCALIZE[31404][/UPPERCASE]</label>
					<visible>Window.IsVisible(9002)</visible>
					<include>BreadCrumb1</include>
				</control>
				<control type="label">
					<description>Fusion Extras Label</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="300">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE]$LOCALIZE[31767][/UPPERCASE]</label>
					<visible>Window.IsVisible(9003)</visible>
					<include>BreadCrumb1</include>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width min="53" max="53">auto</width>
					<height>53</height>
					<aspectratio>keep</aspectratio>
					<texture>nav/breadcrumb.png</texture>
					<visible>!IsEmpty(Container.FolderPath)</visible>
					<visible>!Skin.HasSetting(BlackNavBar)</visible>
					<animation type="WindowClose" reversible="false">
						<effect type="fade" start="100" end="0" time="200" delay="0" />
					</animation>
					<animation type="WindowOpen" reversible="false">
						<effect type="fade" start="0" end="100" time="200" delay="0" />
					</animation>
					<animation effect="fade" start="0" end="100" time="200" delay="0">Visible</animation>
					<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width min="53" max="53">auto</width>
					<height>53</height>
					<aspectratio>keep</aspectratio>
					<texture>nav/breadcrumbalt.png</texture>
					<visible>!IsEmpty(Container.FolderPath)</visible>
					<visible>Skin.HasSetting(BlackNavBar)</visible>
					<animation type="WindowClose" reversible="false">
						<effect type="fade" start="100" end="0" time="200" delay="0" />
					</animation>
					<animation type="WindowOpen" reversible="false">
						<effect type="fade" start="0" end="100" time="200" delay="0" />
					</animation>
					<animation effect="fade" start="0" end="100" time="200" delay="0">Visible</animation>
					<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
				</control>

				<!--Third Set-->
				<control type="label">
					<description>FolderName</description>
					<posx>0</posx>
					<posy>0</posy>
					<width min="29" max="400">auto</width>
					<height>53</height>
					<font>breadcrumb</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>time</textcolor>
					<label>[UPPERCASE]$INFO[Container.FolderName][/UPPERCASE]</label>
					<visible>!Window.IsVisible(2003) + !SubString(Container.FolderPath,episodesinprogress.xsp) + [Container.Content(Songs) | Container.Content(Episodes) | SubString(Container.FolderPath,_hmplayx.xsp,right)]</visible>
					<scroll>false</scroll>
					<include>BreadCrumb1</include>
				</control>

			</control>
			<!-- End Breadcrumbs-->

			<!-- Time-->
			<control type="label">
				<posx>125r</posx>
				<posy>12</posy>
				<width>125</width>
				<height>35</height>
				<font>time</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>time</textcolor>
				<info>System.Time(hh:mm)</info>
				<visible>![substring(system.time,PM,right) | substring(system.time,AM,right)]</visible>
			</control>
			<control type="label">
				<posx>125r</posx>
				<posy>12</posy>
				<width>125</width>
				<height>35</height>
				<font>time</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>time</textcolor>
				<label>$INFO[System.Time(hh:mm)][COLOR ampm]$LOCALIZE[378][/COLOR]</label>
				<visible>substring(system.time,AM,right)</visible>
			</control>
			<control type="label">
				<posx>125r</posx>
				<posy>12</posy>
				<width>125</width>
				<height>35</height>
				<font>time</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>time</textcolor>
				<label>$INFO[System.Time(hh:mm)][COLOR ampm]$LOCALIZE[379][/COLOR]</label>
				<visible>substring(system.time,PM,right)</visible>
			</control>

			<!-- WEATHER -->
			<control type="group">
				<visible>System.HasNetwork + Weather.IsFetched</visible>
				<control type="image">
					<posx>270r</posx>
					<posy>0</posy>
					<width>144</width>
					<height>53</height>
					<aspectratio>stretch</aspectratio>
					<texture>nav/taskbg.png</texture>
					<visible>!Skin.HasSetting(BlackNavBar)</visible>
				</control>
				<control type="image">
					<posx>270r</posx>
					<posy>0</posy>
					<width>144</width>
					<height>53</height>
					<aspectratio>stretch</aspectratio>
					<texture>nav/taskbgalt.png</texture>
					<visible>Skin.HasSetting(BlackNavBar)</visible>
				</control>
				<control type="label">
					<posx>138r</posx>
					<posy>12</posy>
					<width>95</width>
					<height>35</height>
					<font>weather</font>
					<align>right</align>
					<aligny>center</aligny>
					<textcolor>f0c7c7c7</textcolor>
					<label>$INFO[Weather.Temperature]</label>
					<visible>Weather.IsFetched</visible>
				</control>
				<control type="image">
					<posx>257r</posx>
					<posy>0</posy>
					<width>46</width>
					<height>53</height>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[Weather.Conditions]</texture>
				</control>
				<animation effect="fade" start="0" end="100" time="200" delay="0" condition="Window.IsVisible(2600)">WindowClose</animation>
				<animation effect="fade" start="100" end="0" time="200" condition="Window.IsVisible(2600)">WindowOpen</animation>
			</control>
		</control>
	</include>
</includes>