<window id="502">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50,51,52,53,55,58,62</views>
	<controls>

		<include>Background</include>
		<include>FusionStyles</include>

		<!-- MAIN FANART -->
		<control type="image">
			<posx>0</posx>
			<posy>53</posy>
			<include>FanartMusicViews</include>
			<visible>!Skin.HasSetting(HideNavBar)</visible>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>FanartMusicViews</include>
			<visible>Skin.HasSetting(HideNavBar)</visible>
		</control>

		<!-- GENRE FANART -->
		<control type="image">
			<posx>0</posx>
			<posy>53</posy>
			<include>FanartMusicGenres</include>
			<visible>!Skin.HasSetting(HideNavBar)</visible>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<include>FanartMusicGenres</include>
			<visible>Skin.HasSetting(HideNavBar)</visible>
		</control>

		<!-- BOTTOM -->
		<include>ZBar</include>
		<include>BtmInfo</include>

		<!-- VIEWTYPES -->
		<include>List</include>
		<include>BigFan</include>
		<include>InfoWrap</include>
		<include>Grid</include>
		<include>CoverWrap</include>

		<!-- MUSIC OVERLAY -->
		<control type="group">
			<visible>!Control.IsVisible(51)</visible>
			<visible>!SubString(Window(10025).Property(tvtunesIsAlive),True)</visible>
			<include>MusicOverlay</include>
		</control>

		<!-- VIDEO OVERLAY -->
		<control type="group">
			<visible>!Control.IsVisible(51)</visible>
			<include>VideoOverlay</include>
		</control>

		<!-- INFOWRAP (NO LOGOS) -->
		<control type="group">
			<include>ViewWindowOC</include>
			<include>InfoOpenClose</include>
			<include>MusicInfoOpenClose</include>
			<include>ContextFade</include>
			<visible>[Control.IsVisible(53) | Control.IsVisible(55)] + !Skin.HasSetting(MusicLogos)</visible>
			<posx>190</posx>
			<posy>138</posy>
			<animation effect="slide" end="0,-88" time="350" tween="back" easing="inout" condition="Container.Content(Albums)">Conditional</animation>
			<control type="image">
				<posx>22</posx>
				<posy>-17</posy>
				<width>854</width>
				<height>482</height>
				<aspectratio>scale</aspectratio>
				<fadetime>300</fadetime>
				<texture background="true" diffuse="infowrap/fanartdiffuse.png" fallback="nofanart3.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>899</width>
				<height>338</height>
				<aspectratio>stretch</aspectratio>
				<texture>infowrap/fanartborder.png</texture>
			</control>
			<control type="image">
				<posx>205</posx>
				<posy>310</posy>
				<width>35</width>
				<height>35</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[ListItem.Overlay]</texture>
			</control>
		</control>
		<!-- INFOWRAP (LOGOS) -->
		<control type="group">
			<include>ViewWindowOC</include>
			<include>InfoOpenClose</include>
			<include>MusicInfoOpenClose</include>
			<include>ContextFade</include>
			<visible>[Control.IsVisible(53) | Control.IsVisible(55)] + Skin.HasSetting(MusicLogos)</visible>
			<posx>190</posx>
			<posy>186</posy>
			<animation effect="slide" end="0,-140" time="350" tween="circle" easing="inout" condition="Container.Content(Albums)">Conditional</animation>
			<control type="image">
				<posx>22</posx>
				<posy>-17</posy>
				<width>854</width>
				<height>482</height>
				<aspectratio>stretch</aspectratio>
				<fadetime>300</fadetime>
				<texture background="true" diffuse="infowrap/fanartdiffuse.png" fallback="nofanart3.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>899</width>
				<height>338</height>
				<aspectratio>stretch</aspectratio>
				<texture>infowrap/fanartborder.png</texture>
			</control>
			<control type="image">
				<posx>205</posx>
				<posy>310</posy>
				<width>35</width>
				<height>35</height>
				<aspectratio>keep</aspectratio>
				<texture>$INFO[ListItem.Overlay]</texture>
			</control>
		</control>

		<control type="group">
			<posy>-53</posy>
			<visible>Skin.HasSetting(HideNavBar)</visible>
			<animation effect="slide" start="0,0" end="0,53" time="250" condition="Control.HasFocus(300)">conditional</animation>
			<include>DropDownBar</include>
			<include>nav</include>
		</control>

		<control type="group">
			<visible>!Skin.HasSetting(HideNavBar)</visible>
			<include>DropDownBar</include>
			<include>nav</include>
			<include>ScrollOffsetLabel</include>
		</control>
	</controls>

</window>