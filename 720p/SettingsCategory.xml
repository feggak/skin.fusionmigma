<window id="12">
	<defaultcontrol always="true">3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>Background</include>
		<include>FusionStyles</include>

		<!-- LIST -->
		<control type="group">
			<animation type="Conditional" condition="Window.IsVisible(126) | Window.IsVisible(2000)">
				<effect type="fade" start="100" end="0" time="100" />
			</animation>
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" start="0" end="100" time="100" delay="0" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="100" delay="0" />
			</animation>
			<control type="image">
				<posx>110</posx>
				<posy>130</posy>
				<width>1072</width>
				<height>496</height>
				<aspectratio>stretch</aspectratio>
				<texture>settings/listbg.png</texture>
				<colordiffuse>FFFFFFFF</colordiffuse>
			</control>

			<!-- Lefthand List -->
			<control type="grouplist" id="3">
				<description>Button Area</description>
				<posx>115</posx>
				<posy>135</posy>
				<width>250</width>
				<height>400</height>
				<itemgap>.5</itemgap>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<orientation>vertical</orientation>
			</control>

			<!-- Righthand List -->
			<control type="grouplist" id="5">
				<description>Control Area</description>
				<posx>366</posx>
				<posy>136</posy>
